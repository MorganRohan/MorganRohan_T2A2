<p id="notice"><%= notice %></p>

<div>
  <% if @listing.picture.attached? %>
    <%= image_tag @listing.picture, alt: @listing.title %>
  <% else %>
    <%= image_tag "https://placekitten.com/200/300" , alt: @listing.title %>
  <% end %>
</div>

<% if @listing.sold %>
  <p>NOT AVAILABLE TO PURCHASE</p>
<% elsif current_account && current_account.id == @listing.account_id %>
  <p>CANNOT PURCHASE OWN ITEM</p>
<% elsif current_account %>
  <%= button_to "Purchase", place_order_path%>
<% elsif current_account == nil %>
  <p>PLEASE LOG IN OR MAKE AN ACCOUNT TO PURCHASE</p>
<% end %>

<p>
  <strong>Title:</strong>
  <%= @listing.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @listing.author %>
</p>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<p>
  <strong>Condition:</strong>
  <%= @listing.condition %>
</p>

<p>
  <strong>Price:</strong>
  <%= @listing.price %>
</p>

<p>
  <strong>Sold:</strong>
  <%= @listing.sold %>
</p>

<p>
  <strong>Account:</strong>
  <%= @listing.account_id %>
</p>

<p>
  <strong>Category:</strong>
  <%= @listing.category_id %>
</p>

<% if current_account == @listing.account_id %>
  <%= link_to 'Edit', edit_listing_path(@listing) %> 
<% else current_account == nil %>
  <%= link_to 'Show', listing_path(@listing) %>
<% end %>
<%= link_to 'Back', listings_path %>
